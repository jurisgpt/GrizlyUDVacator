[flake8]

# Maximum line length
max-line-length = 100

# Ignore specific error codes
ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long
    W503,  # line break before binary operator
    W504,  # line break after binary operator

# Exclude directories
exclude =
    tests/*,
    docs/*,
    .venv/*,
    __pycache__/*,
    .mypy_cache/*

# Select specific error codes
select =
    E,  # PEP 8 style guide
    F,  # PyFlakes
    W,  # Whitespace

# Enable statistics
statistics = True

# Show source code
show-source = True

# Enable per-file-ignores
per-file-ignores =
    # Ignore specific errors in specific files
    # Example: test_file.py: E123

# Enable max-complexity
max-complexity = 10

# Enable max-line-length
max-line-length = 100

# Enable max-doc-length
max-doc-length = 72

# Enable max-nested-blocks
max-nested-blocks = 5

# Enable max-statements
max-statements = 50

# Enable max-arguments
max-arguments = 5

# Enable max-locals
max-locals = 15

# Enable max-returns
max-returns = 6

# Enable max-branches
max-branches = 12

# Enable max-statements
max-statements = 50

# Enable max-attributes
max-attributes = 7

# Enable max-public-methods
max-public-methods = 20

# Enable max-parents
max-parents = 7

# Enable max-imports
max-imports = 10

# Enable max-import-levels
max-import-levels = 3

# Enable max-imports-per-line
max-imports-per-line = 1

