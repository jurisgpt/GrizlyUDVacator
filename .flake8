[flake8]
max-line-length = 100
max-statements = 50
max-complexity = 10
max-doc-length = 72
max-nested-blocks = 5

ignore = E203, E266, E503, W503
exclude =
    tests,
    docs,
    .venv,
    __pycache__,
    .mypy_cache

statistics = True
show-source = True
max-arguments = 5

# Enable max-locals
max-locals = 15

# Enable max-returns
max-returns = 6

# Enable max-branches
max-branches = 12

# Enable max-statements
max-statements = 50

# Enable max-attributes
max-attributes = 7

# Enable max-public-methods
max-public-methods = 20

# Enable max-parents
max-parents = 7

# Enable max-imports
max-imports = 10

# Enable max-import-levels
max-import-levels = 3

# Enable max-imports-per-line
max-imports-per-line = 1

